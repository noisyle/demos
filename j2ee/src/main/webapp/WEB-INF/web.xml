<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>j2ee-demo</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>j2ee-demo.root</param-value>
	</context-param>
	<filter>
		<filter-name>XSSFiler</filter-name>
		<filter-class>com.noisyle.demo.j2ee.server.XssFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>XSSFiler</filter-name>
		<url-pattern>/demo</url-pattern>
	</filter-mapping>
	<servlet>
		<display-name>DemoServlet</display-name>
		<servlet-name>DemoServlet</servlet-name>
		<servlet-class>com.noisyle.demo.j2ee.server.DemoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DemoServlet</servlet-name>
		<url-pattern>/demo</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>testServlet</servlet-name>
		<servlet-class>com.noisyle.demo.j2ee.server.TestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>testServlet</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<listener>
		<listener-class>com.noisyle.demo.j2ee.server.TestListener</listener-class>
	</listener>
</web-app>